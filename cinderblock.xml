<?xml version="1.0" encoding="UTF-8" ?>
<cinder>
<block
	name="FFmpeg"
	id="nl.cowlumbus.ffmpeg"
	author="Paul Houx"
	license="MIT"
	summary="Digital video decoder for Cinder, based on FFmpeg's libavcodec library."
	url="https://github.com/paulhoux/Cinder-FFmpeg"
	git="git://github.com/paulhoux/Cinder-FFmpeg.git"
	>
	<supports os="msw" />
	<includePath>include</includePath>
	<header>include/CinderFFmpeg.h</header>
	<sourcePattern>include/common/*.h</sourcePattern>
	<sourcePattern>include/audiorenderer/*.h</sourcePattern>
	<sourcePattern>include/movierenderer/*.h</sourcePattern>
	<sourcePattern>src/CinderFFmpeg.cpp</sourcePattern>
	<sourcePattern>src/common/*.cpp</sourcePattern>
	<sourcePattern>src/audiorenderer/*.cpp</sourcePattern>
	<sourcePattern>src/movierenderer/*.cpp</sourcePattern>
	<platform os="msw">
		<staticLibrary>build/lib/msw/x86/avcodec.lib</staticLibrary>
		<!--staticLibrary>build/lib/msw/x86/avdevice.lib</staticLibrary-->
		<!--staticLibrary>build/lib/msw/x86/avfilter.lib</staticLibrary-->
		<staticLibrary>build/lib/msw/x86/avformat.lib</staticLibrary>
		<staticLibrary>build/lib/msw/x86/avutil.lib</staticLibrary>
		<!--staticLibrary>build/lib/msw/x86/postproc.lib</staticLibrary-->
		<staticLibrary>build/lib/msw/x86/swresample.lib</staticLibrary>
		<staticLibrary>build/lib/msw/x86/swscale.lib</staticLibrary>
		<staticLibrary>build/lib/msw/x86/openal32.lib</staticLibrary>
		
		<buildCopy>build/bin/msw/x86/avcodec-58.dll</buildCopy>
		<!--buildCopy>build/bin/msw/x86/avdevice-58.dll</buildCopy-->
		<!--buildCopy>build/bin/msw/x86/avfilter-7.dll</buildCopy-->
		<buildCopy>build/bin/msw/x86/avformat-58.dll</buildCopy>
		<buildCopy>build/bin/msw/x86/avutil-56.dll</buildCopy>
		<!--buildCopy>build/bin/msw/x86/postproc-55.dll</buildCopy-->
		<buildCopy>build/bin/msw/x86/swresample-3.dll</buildCopy>
		<buildCopy>build/bin/msw/x86/swscale-5.dll</buildCopy>
		<!--buildCopy>build/bin/msw/x86/openal32.dll</buildCopy-->
	</platform>
</block>
<template>templates/Basic FFmpeg/template.xml</template>
</cinder>